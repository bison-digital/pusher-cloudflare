{
  "name": "@bison.digital/pusher-cloudflare",
  "version": "1.0.0",
  "type": "module",
  "description": "Pusher SDK for Cloudflare Workers - A lightweight, Worker-compatible implementation",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run clean && tsc && rollup -c",
    "clean": "rimraf dist/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "prepack": "pnpm run build",
    "version": "pnpm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "pusher",
    "cloudflare",
    "workers",
    "websocket",
    "realtime",
    "typescript"
  ],
  "author": "Zach Bimson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bison-digital/pusher-cloudflare.git"
  },
  "bugs": {
    "url": "https://github.com/bison-digital/pusher-cloudflare/issues"
  },
  "homepage": "https://github.com/bison-digital/pusher-cloudflare#readme",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}